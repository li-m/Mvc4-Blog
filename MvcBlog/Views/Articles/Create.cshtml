@using MvcBlog.Models
@model MvcBlog.Models.Article

@using (Html.BeginForm("Create", "Articles", FormMethod.Post))
{
    @Html.HiddenFor(a => a.Id)
    <table id="CreateArticle">
        <tr>
            <td colspan="2">Create</td>
        </tr>
        <tr>
            <td>Title:</td>
            <td>
                @Html.TextBoxFor(a => a.Title)
            </td>
        </tr>
        <tr>
            <td>Content:</td>
            <td>
                @Html.TextAreaFor(a => a.Content, 10, 60, null)
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="OK" />
                @Html.ActionLink("Return", "List", "Articles")
            </td>
        </tr>

    </table>
}
